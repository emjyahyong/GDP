{% extends 'base.html.twig' %}

{% block title %}Commandes Uber Eats{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Commandes Uber Eats</h1>
        
        <div class="row mt-4">
            <div class="col-12">
                {% if orders is empty %}
                    <div class="alert alert-info">
                        Aucune commande Uber Eats en cours.
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID Commande</th>
                                    <th>Date</th>
                                    <th>Articles</th>
                                    <th>Prix Total</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in orders %}
                                    <tr>
                                        <td>{{ order.id }}</td>
                                        <td>{{ order.created_at|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <ul class="list-unstyled">
                                                {% for item in order.items %}
                                                    <li>{{ item.quantity }}x {{ item.title }}</li>
                                                {% endfor %}
                                            </ul>
                                        </td>
                                        <td>{{ order.total_price }} €</td>
                                        <td>
                                            <span class="badge bg-{{ order.status == 'COMPLETED' ? 'success' : 'warning' }}">
                                                {{ order.status }}
                                            </span>
                                        </td>
                                        <td>
                                            <form action="{{ path('app_menu_order_status', {'orderId': order.id}) }}" method="POST" class="d-inline">
                                                <select name="status" class="form-select form-select-sm d-inline-block w-auto">
                                                    <option value="ACCEPTED">Accepter</option>
                                                    <option value="PREPARING">En préparation</option>
                                                    <option value="READY">Prêt</option>
                                                    <option value="COMPLETED">Terminé</option>
                                                </select>
                                                <button type="submit" class="btn btn-primary btn-sm">Mettre à jour</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Statut de la connexion Uber Eats</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="mb-0">
                                    <strong>Store ID:</strong> {{ app.request.server.get('UBER_EATS_STORE_ID') }}
                                </p>
                            </div>
                            <div>
                                <a href="{{ path('app_menu_orders') }}" class="btn btn-primary">
                                    <i class="fas fa-sync"></i> Rafraîchir les commandes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
